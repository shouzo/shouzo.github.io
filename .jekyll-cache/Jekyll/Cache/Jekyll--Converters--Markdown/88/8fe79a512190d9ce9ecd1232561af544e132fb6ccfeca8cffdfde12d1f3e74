        <span class="p">}</span>
    <span class="p">}</span>

    <span class="c1">// pthread_mutex_unlock(&amp;work_mutex);</span>
	<span class="n">pthread_exit</span><span class="p">(</span><span class="mi">0</span><span class="p">);</span>
<span class="p">}</span>


