	<span class="n">printf</span><span class="p">(</span><span class="s">"è¼¸å…¥aé»çš„åº§æ¨™ : "</span><span class="p">);</span>	<span class="n">scanf</span><span class="p">(</span><span class="s">"%d%d"</span><span class="p">,</span> <span class="o">&amp;</span><span class="n">a1</span><span class="p">,</span> <span class="o">&amp;</span><span class="n">a2</span><span class="p">);</span>
	<span class="n">printf</span><span class="p">(</span><span class="s">"è¼¸å…¥bé»çš„åº§æ¨™ : "</span><span class="p">);</span>	<span class="n">scanf</span><span class="p">(</span><span class="s">"%d%d"</span><span class="p">,</span> <span class="o">&amp;</span><span class="n">b1</span><span class="p">,</span> <span class="o">&amp;</span><span class="n">b2</span><span class="p">);</span>
